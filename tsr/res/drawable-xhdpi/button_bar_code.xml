<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#64b1e2" />
            <stroke android:width="1dp" android:color="#64b1e2" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="4dp" android:topLeftRadius="0dp" android:topRightRadius="4dp" />
        </shape>
    </item>

    <item android:state_focused="true"><shape android:shape="rectangle">
        <solid android:color="#05a3c6" />
        <stroke android:width="1dip" android:color="#05a3c6" />
        <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="4dp" android:topLeftRadius="0dp" android:topRightRadius="4dp" />
    </shape></item>

    <item>
        <shape>
            <solid android:color="#64b1e2" />
            <stroke android:width="1dp" android:color="#64b1e2" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="4dp" android:topLeftRadius="0dp" android:topRightRadius="4dp" />
        </shape>
    </item>

</selector>