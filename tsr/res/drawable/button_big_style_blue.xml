<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dip"/>
            <stroke android:width="1dip" android:color="#4cace0"/>
            <solid android:color="#4cace0"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dip"/>
            <stroke android:width="1dip" android:color="#0089d3"/>
            <solid android:color="#0089d3"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dip"/>
            <stroke android:width="1dip" android:color="#0079c2"/>
            <solid android:color="#0089d3"/>
        </shape>
    </item>

</selector>
