<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="2dip" />

            <stroke android:width="1dip" android:color="#05a3c6" />

            <gradient android:angle="-90" android:startColor="#0769de" android:endColor="#063784" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="2dip" />

            <stroke android:width="1dip" android:color="#05a3c6" />

            <solid android:color="#48948f" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="2dip" android:color="#64b1e2" />

           <solid android:color="#64b1e2" />
        </shape></item>

</selector>
