                        android:text="เบอร์บ้าน" />

                    <EditText
                        android:id="@+id/editTextPhone"
                        style="@style/TextView.Value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:digits="0123456789-"
                        android:ems="10"
                        android:inputType="phone" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="เบอร์ที่ทำงาน" />

                    <EditText
                        android:id="@+id/editTextWorkPhone"
                        style="@style/TextView.Value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:ems="10"
                        android:inputType="phone" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="@dimen/impound_detail_height"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="เบอร์มือถือ/เบอร์ที่ติดต่อได้" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/impound_detail_height"
                        android:layout_marginLeft="@dimen/padding_normal">

                        <EditText
                            android:id="@+id/editTextMobilePhone"
                            style="@style/TextView.Value"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/impound_detail_height"
                            android:layout_alignRight="@+id/requireTextMobilePhone"
                            android:ems="10"
                            android:inputType="phone" />

                        <TextView
                            android:id="@+id/requireTextMobilePhone"
                            style="@style/TextView.Label"
                            android:layout_width="10dp"
                            android:layout_height="@dimen/impound_detail_height"
                            android:layout_alignParentRight="true"
                            android:background="@android:drawable/screen_background_light_transparent"
                            android:text="*"
                            android:textColor="@android:color/holo_red_dark" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextView.Label"
                    android:layout_width="@dimen/impound_detail_width"
                    android:layout_height="@dimen/impound_detail_height2"
                    android:paddingRight="@dimen/padding_normal"
                    android:text="อีเมล์" />

                <EditText
                    android:id="@+id/editTextEmail"
                    style="@style/TextView.Value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/buttonAddAddress"
                        style="@style/ButtonTop"
                        android:layout_width="@dimen/sale_button_width"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="เพิ่มที่อยู่" />

                    <Button
                        android:id="@+id/buttonUseCard"
                        style="@style/ButtonTop"
                        android:layout_width="@dimen/sale_button_width"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="ใช้ตามบัตร" />

                    <Button
                        android:id="@+id/buttonUseInstall"
                        style="@style/ButtonTop"
                        android:layout_width="@dimen/sale_button_width"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:text="ใช้ตามที่ติดตั้ง" />

                </TableRow>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

