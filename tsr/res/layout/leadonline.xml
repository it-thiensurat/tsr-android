<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp"
    card_view:cardMaxElevation="1dp"
    card_view:contentPadding="1dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_body_white"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_normal"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtHeadId"
                style="@style/TextView.Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.45"
                android:gravity="left"
                android:text="เลขที่ :"
                android:textColor="@color/font_color_white" />
            <TextView
                android:id="@+id/txtId"
                style="@style/TextView.Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.45"
                android:gravity="left"
                android:text="xxxx"
                android:textColor="@color/font_color_white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtCreateDate"
                style="@style/TextView.Value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.45"
                android:gravity="right"
                android:text="15/03/2564"
                android:textColor="@color/font_color_white" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_bottom"
            android:layout_marginBottom="@dimen/normal_bottom">

            <TextView
                android:id="@+id/txtSupervisorTitle"
                style="@style/TextView.Label.bold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/impound_detail_height2"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/padding_normal"
                android:text="ชื่อลูกค้า :"
                android:textColor="#2c2c2c" />

            <TextView
                android:id="@+id/txtcusName"
                style="@style/TextView.Value"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_bottom">

            <TextView
                android:id="@+id/txtLineManagerTitle"
                style="@style/TextView.Label.bold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/impound_detail_height2"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/padding_normal"
                android:text="เบอร์โทร :"
                android:textColor="#2c2c2c" />

            <TextView
                android:id="@+id/txtTel"
                style="@style/TextView.Value"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:text="TextView" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtManagerTitle"
                style="@style/TextView.Label.bold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/impound_detail_height2"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/padding_normal"
                android:text="E-Mail :"
                android:textColor="#2c2c2c" />

            <TextView
                android:id="@+id/txtemail"
                style="@style/TextView.Value"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:text="TextView" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtManagerTitle"
                style="@style/TextView.Label.bold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/impound_detail_height2"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/padding_normal"
                android:text="ID Line :"
                android:textColor="#2c2c2c" />

            <TextView
                android:id="@+id/txtidline"
                style="@style/TextView.Value"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:text="TextView" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtManagerTitle"
                style="@style/TextView.Label.bold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/impound_detail_height2"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/padding_normal"
                android:text="จังหวัด :"
                android:textColor="#2c2c2c" />

            <TextView
                android:id="@+id/txtProvinceName"
                style="@style/TextView.Value"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:justificationMode="inter_word"
                android:text="TextView" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtManagerTitle"
                style="@style/TextView.Label.bold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/impound_detail_height2"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/padding_normal"
                android:text="สินค้าที่สนใจ :"
                android:textColor="#2c2c2c" />

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:layout_margin="5dp"
                android:justificationMode="inter_word"
                android:text="TextView" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txtManagerTitle"
                style="@style/TextView.Label.bold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/impound_detail_height2"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/padding_normal"
                android:text="รายละเอียดเพิ่มเติม :"
                android:textColor="#2c2c2c" />

            <TextView
                android:id="@+id/txtDetail"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:layout_margin="5dp"
                android:justificationMode="inter_word"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center|center_horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/pictureURL"
                    android:src="@drawable/alkaline"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent" />
                <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtnameimage"
                android:visibility="gone"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txtidprovince"
                    android:visibility="gone"/>
            </RelativeLayout>






        </LinearLayout>>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtManagerTitle"
                style="@style/TextView.Label.bold"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/padding_normal"
                android:text="สถานะ :"
                android:textColor="#2c2c2c" />

            <TextView
                android:id="@+id/statusLeadonline"
                style="@style/TextView.Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/twobntLinerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">


            <Button
                android:id="@+id/btnCancel"
                style="@style/ButtonTop_a"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="90sp"
                android:layout_marginRight="30dp"
                android:text="ยกเลิก"
                android:textColor="@color/bg_body_white" />

            <Button
                android:id="@+id/btnAccept"
                style="@style/ButtonTop_b"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="10dp"
                android:text="ยืนยัน"
                android:textColor="@color/bg_body_white" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnSerchLinerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <Button
                android:id="@+id/btnSearch"
                style="@style/ButtonTop"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="250sp"
                android:layout_marginRight="10dp"
                android:text="ส่งค่า"
                android:textColor="@color/bg_body_white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/StampLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txtManagerTitle"
                style="@style/TextView.Label.bold"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/padding_normal"
                android:text="Stamp Code :"
                android:textColor="#2c2c2c" />

            <TextView
                android:id="@+id/statusStampcode"
                style="@style/TextView.Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:text="TextView" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"></LinearLayout>
    </LinearLayout>






</android.support.v7.widget.CardView>