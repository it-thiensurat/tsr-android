<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtWriteOffNPLDate"
        style="@style/TextView.Value"
        android:layout_width="@dimen/employee_image_size"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/txtProductSerialNumber"
        style="@style/TextView.Value"
        android:layout_width="@dimen/employee_image_size"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/txtPaymentPeriod"
        style="@style/TextView.Value"
        android:layout_width="@dimen/impound_detail_left"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/txtPaymentAmount"
        style="@style/TextView.Value"
        android:layout_width="@dimen/employee_image_size"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/txtProblemName"
        style="@style/TextView.Value"
        android:layout_width="@dimen/employee_detail_width"
        android:layout_height="match_parent"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:paddingLeft="@dimen/padding_normal"
        android:text="" />

</LinearLayout>