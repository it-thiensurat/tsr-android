<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_small" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/impound_detail_width"
                    android:layout_height="@dimen/impound_detail_height"
                    android:background="@color/bg_show_detail"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/label_serial_no" />

                <TextView
                    android:id="@+id/txtCode"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/impound_detail_height"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="0.72"
                    android:background="@color/bg_show_detail"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_small" >

                <TextView
                    android:id="@+id/textView2"
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/impound_detail_width"
                    android:layout_height="@dimen/impound_detail_height"
                    android:background="@color/bg_show_detail"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/label_product_name" />

                <TextView
                    android:id="@+id/txtProduct"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/impound_detail_height"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="0.72"
                    android:background="@color/bg_show_detail"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/small_font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_small"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="@string/label_contract_no" />

                    <TextView
                        android:id="@+id/txtNo"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="ผู้ซื้อ" />

                    <TextView
                        android:id="@+id/txtName"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/change_product_detail_width2"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="เลขที่บัตรประจำตัว" />

                    <TextView
                        android:id="@+id/txtIDCardNo"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="ที่อยู่" />

                    <TextView
                        android:id="@+id/txtAddress"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:layout_weight="@dimen/next_payment_customer_detail_value_weight"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="เบอร์โทร" />

                    <TextView
                        android:id="@+id/txtTel"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextView.Label"
                            android:layout_width="@dimen/impound_detail_width"
                            android:layout_height="@dimen/impound_detail_height2"
                            android:paddingRight="@dimen/padding_normal"
                            android:text="วันที่ติดตั้ง" />

                        <TextView
                            android:id="@+id/txtDataInstall"
                            style="@style/TextView.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_large" >

                        <TextView
                            style="@style/TextView.Label"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/impound_detail_height2"
                            android:paddingRight="@dimen/padding_normal"
                            android:text="ปักษ์ที่" />

                        <TextView
                            android:id="@+id/txtFortnight"
                            style="@style/TextView.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_normal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="รหัสพนักงาน" />

                    <TextView
                        android:id="@+id/txtSale"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/change_product_detail_width2"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="สาเหตุการตัดสัญญาค้าง" />

                    <Spinner
                        android:id="@+id/spnProblem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/change_product_detail_width2"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="อื่นๆ" />

                    <EditText
                        android:id="@+id/etMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="@dimen/small_font_size" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/change_product_detail_width2"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="วันที่ตัดสัญญาค้าง" />

                    <EditText
                        android:id="@+id/etDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="date"
                        android:textSize="@dimen/small_font_size" >
                    </EditText>

                    <ImageButton
                        android:id="@+id/imageButtonWriteoffDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_today"
                        android:visibility="gone"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageViewLoss"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_person" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>