<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_view_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtNo"
        style="@style/TextView.Value.Normal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.15"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/txtCustomerFullNameAndCONTNO"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        style="@style/TextView.Value.Normal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:paddingLeft="5dp"
        android:gravity="left|center_vertical"
        android:text="นายสมชาย เจริญวงศ\n1AAA0200AAA033" />

    <TextView
        android:id="@+id/txtPaymentPeriodNumber"
        style="@style/TextView.Value.Normal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/txtNetAmount"
        style="@style/TextView.Value.Normal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:text="3,000.00" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2">

        <ImageView
            android:id="@+id/imgMove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_drawer" />
    </RelativeLayout>
    <!--android:background="@android:drawable/screen_background_light_transparent"-->
</LinearLayout>