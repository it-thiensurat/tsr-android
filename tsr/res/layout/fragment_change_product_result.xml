<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_small" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/impound_detail_width"
                    android:layout_height="@dimen/impound_detail_height"
                    android:background="@color/bg_show_detail"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/label_product_no" />

                <TextView
                    android:id="@+id/txtCode"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/impound_detail_height"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="0.72"
                    android:background="@color/bg_show_detail"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/normal_font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_small" >

                <TextView
                    android:id="@+id/textView2"
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/impound_detail_width"
                    android:layout_height="@dimen/impound_detail_height"
                    android:background="@color/bg_show_detail"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="@string/label_product_name" />

                <TextView
                    android:id="@+id/txtProduct"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/impound_detail_height"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="0.72"
                    android:background="@color/bg_show_detail"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/small_font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="@string/label_contract_no" />

                    <TextView
                        android:id="@+id/txtNo"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="ผู้ซื้อ" />

                    <TextView
                        android:id="@+id/txtCusName"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="ที่อยู่" />

                    <TextView
                        android:id="@+id/txtAddress"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:layout_weight="@dimen/next_payment_customer_detail_value_weight"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="เบอร์โทร" />

                    <TextView
                        android:id="@+id/txtTel"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="พนักงานขาย" />

                    <TextView
                        android:id="@+id/txtSale"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="หัวหน้าทีม" />

                    <TextView
                        android:id="@+id/txtTeam"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/impound_detail_width"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="วันที่ติดตั้ง" />

                    <TextView
                        android:id="@+id/txtDataInstall"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/change_product_detail_width2"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="สาเหตุการเปลี่ยน" />

                     <TextView
                        android:id="@+id/txtProblem"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/change_product_detail_width2"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="เพิ่มเติม" />

                    <TextView
                        android:id="@+id/txtMore"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/change_product_detail_width2"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="หมายเลขเครื่องใหม่" />

                    <TextView
                        android:id="@+id/txtNewProduct"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/change_product_detail_width2"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="วันที่เปลี่ยน" />

                     <TextView
                        android:id="@+id/txtEffDate"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/change_product_detail_width2"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="ผู้เปลี่ยน" />

                    <TextView
                        android:id="@+id/txtName"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal" />
                </LinearLayout>
                
                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/TextView.Label"
                        android:layout_width="@dimen/change_product_detail_width2"
                        android:layout_height="@dimen/impound_detail_height2"
                        android:paddingRight="@dimen/padding_normal"
                        android:text="ภาพถ่ายสินค้า" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageViewChange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@android:drawable/alert_light_frame" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>