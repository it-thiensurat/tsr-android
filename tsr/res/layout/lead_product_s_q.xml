<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/bg_body_white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:padding="4dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:background="@color/bg_body_white">

                <TextView
                    android:id="@+id/txtNumber"
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#2c2c2c" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtProductName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:text="เครื่องทำน้ำแข็งอัลไพน์ (แบบบาง) รุ่น FH-140"
                        android:textColor="@color/new_primary_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_weight="0.4"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_decrease"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:text="-"
                            android:textSize="22dp"
                            android:textColor="@color/bg_body_white"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/button_round"/>

                        <TextView
                            android:id="@+id/txtProductQty"
                            style="@style/TextView.Label.bold"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#2c2c2c" />

                        <Button
                            android:id="@+id/btn_increase"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:text="+"
                            android:textSize="22dp"
                            android:textColor="@color/bg_body_white"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/button_round"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="top|right"
                    android:orientation="vertical"
                    android:layout_weight="0.1">

                    <ImageView
                        android:id="@+id/button_remove_item"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/minus_red"/>

                </LinearLayout>

            </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>