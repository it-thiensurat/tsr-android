<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <th.co.thiensurat.views.ViewTitle
        style="@style/ViewTitle"
        android:padding="@dimen/padding_normal"
        app:text="@string/caption_customer_list"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/label_contract_date"/>

                <TextView
                    android:id="@+id/textViewContractDate"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/label_contract_no"/>

                <TextView
                    android:id="@+id/textViewContractNo"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/change_contract_customer_fullname"/>

                <TextView
                    android:id="@+id/textViewContractCustomerFullname"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/label_credit_no"/>

                <TextView
                    android:id="@+id/textViewCardNo"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/label_customer_address"/>

                <TextView
                    android:id="@+id/textViewCustomerAddress"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/label_install_address"/>

                <TextView
                    android:id="@+id/textViewInstallAddress"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="left"/>
            </LinearLayout>

            <!-- [START] :: Fixed - [BHPROJ-0025-713] :: ให้แสดงข้อมูล ที่อยู่ ติดตั้ง และ ที่อยู่เก็บเงิน (กรณีที่ทั้ง 2 ที่อยู่แตกต่างกัน) -->
            <LinearLayout
                android:id="@+id/linearLayoutPaymentAddress"
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/label_payment_address"/>

                <TextView
                    android:id="@+id/textViewPaymentAddress"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="left"/>
            </LinearLayout>
            <!-- [END] :: Fixed - [BHPROJ-0025-713] :: ให้แสดงข้อมูล ที่อยู่ ติดตั้ง และ ที่อยู่เก็บเงิน (กรณีที่ทั้ง 2 ที่อยู่แตกต่างกัน) -->

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/label_product"/>

                <TextView
                    android:id="@+id/textViewProduct"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_active"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/label_product_price"/>

                    <TextView
                        android:id="@+id/textViewProductPrice"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="15,000.00"/>

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.2"
                        android:gravity="left"
                        android:text="@string/label_baht"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutDiscount"
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/label_discount_mc_turn"/>

                    <TextView
                        android:id="@+id/textViewDiscount"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="15,000.00"/>

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.2"
                        android:gravity="left"
                        android:text="@string/label_baht"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/label_product_price_net"/>

                    <TextView
                        android:id="@+id/textViewProductPriceNet"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="15,000.00"/>

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.2"
                        android:gravity="left"
                        android:text="@string/label_baht"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/change_contract_first_payment_amount"/>

                    <TextView
                        android:id="@+id/textViewFirstPaymentAmoun"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="15,000.00"/>

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.2"
                        android:gravity="left"
                        android:text="@string/label_baht"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textViewTitleNextPaymentAmoun"
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/change_contract_next_payment_amount"/>

                    <TextView
                        android:id="@+id/textViewNextPaymentAmoun"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="right"
                        android:text="15,000.00"/>

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.2"
                        android:gravity="left"
                        android:text="@string/label_baht"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/label_audit_date"/>

                <TextView
                    android:id="@+id/textViewAuditDate"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/label_payment"/>

                <RadioGroup
                    android:id="@+id/radioGroup_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RadioButton
                        android:id="@+id/radio_correct"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/label_correct"/>

                    <RadioButton
                        android:id="@+id/radio_incorrect"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/label_incorrect"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_active"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textViewPaymentDetails"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/label_usage_or_install"/>

                <RadioGroup
                    android:id="@+id/radioGroup_usage_or_install"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RadioButton
                        android:id="@+id/radio_successful"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/label_successful"/>

                    <RadioButton
                        android:id="@+id/radio_not_successful"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/label_not_successful"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/label_other_deals"/>

                <RadioGroup
                    android:id="@+id/radioGroup_other_deals"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RadioButton
                        android:id="@+id/radio_not"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/label_not"/>

                    <RadioButton
                        android:id="@+id/radio_have"
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/label_have"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutAgreementDetails"
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:visibility="gone">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="รายละเอียดข้อตกลง"/>

                <EditText
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:id="@+id/editTextAgreementDetails"
                    android:text=""/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/linearLayoutNoProblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="@string/label_payment_two"
                        android:id="@+id/textViewPaymentAppointment"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextAppointment"
                            style="@style/TextView.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:editable="false"
                            android:text=""/>

                        <ImageButton
                            android:id="@+id/imageButtonAppointment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_menu_today"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="ภาพถ่ายสินค้า"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewAudit"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:paddingRight="20dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@android:drawable/alert_light_frame"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutProblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="ปัญหา"/>

                    <Spinner
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:spinnerMode="dialog"
                        android:id="@+id/spinnerProblem"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutCause"
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="สาเหตุ"/>

                    <EditText
                        style="@style/TextView.Value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:layout_weight="0.7"
                        android:lines="8"
                        android:minLines="4"
                        android:gravity="top|left"
                        android:maxLines="10"
                        android:scrollbars="vertical"
                        android:id="@+id/editTextCause"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>