<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5D0A9"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/viewGroupIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblListHeader"
            style="@style/TextView.Label.bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp" />

        <ImageView
            android:id="@+id/imgGroupIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/plus" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_table_main_header"
        android:clickable="false"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/lblAppointmentDate"
            style="@style/TextView.Label.bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="วันนัดชำระ" />

        <TextView
            android:id="@+id/lblCount"
            style="@style/TextView.Label.bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="จำนวนราย" />

        <TextView
            android:id="@+id/lblSumAmount"
            style="@style/TextView.Label.bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.34"
            android:gravity="center"
            android:text="จำนวนเงิน" />

        <!--<TextView-->
        <!--android:id="@+id/lblSendMoneyDate"-->
        <!--style="@style/TextView.Label.bold"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_weight="0.3"-->
        <!--android:gravity="center" />-->

    </LinearLayout>
</LinearLayout>