<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtDate"
        style="@style/TextView.Value"
        android:layout_width="@dimen/change_product_detail_width"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:text="09/06/2557" />

    <TextView
        android:id="@+id/txtHold_Cash"
        style="@style/TextView.Value"
        android:layout_width="@dimen/employee_header_height"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/txtHold_Credit"
        style="@style/TextView.Value"
        android:layout_width="@dimen/employee_header_height"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/txtInstall_Cash"
        style="@style/TextView.Value"
        android:layout_width="@dimen/employee_header_height"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/txtInstall_Credit"
        style="@style/TextView.Value"
        android:layout_width="@dimen/employee_header_height"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/txtFirst"
        style="@style/TextView.Value"
        android:layout_width="@dimen/change_product_detail_width"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/txtNext"
        style="@style/TextView.Value"
        android:layout_width="@dimen/change_product_detail_width"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="1" />

</LinearLayout>