<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/th.co.thiensurat"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/viewPagerIndicator"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/viewPagerCountDots"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/padding_normal"
            android:layout_marginRight="@dimen/padding_normal">



            <TextView
                style="@style/TextView.Label.bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/label_receipt"
                android:textSize="@dimen/large_font_size"
                android:layout_marginBottom="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_normal"/>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_receipt_date"/>

                <TextView
                    android:id="@+id/tvReceiptDate"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_receipt_no"/>

                <TextView
                    android:id="@+id/tvReceiptNo"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_contract_no"/>

                <TextView
                    android:id="@+id/tvContractNo"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_contract_date"/>

                <TextView
                    android:id="@+id/tvContractDate"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_customer_name"/>

                <TextView
                    android:id="@+id/tvCustomerName"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_citizen_no"/>

                <TextView
                    android:id="@+id/tvCitizenNo"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_install_address"/>

                <TextView
                    android:id="@+id/tvCustomerAddress"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_product_name"/>

                <TextView
                    android:id="@+id/tvProductName"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_contract_model"/>

                <TextView
                    android:id="@+id/textViewModel"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_product_no"/>

                <TextView
                    android:id="@+id/tvProductNo"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top">

                <TextView
                    android:id="@+id/tvPeriodAmountLabel"
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvPeriodAmount"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtThaiBaht"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBalanceAmount"
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvBalanceAmountLabel"
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_print_width"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvBalanceAmount"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCreditAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_product_detail_top">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="@dimen/change_product_print_width"
                        android:layout_height="wrap_content"
                        android:text="@string/label_credit_name"/>

                    <TextView
                        android:id="@+id/tvCreditName"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_product_detail_top">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="@dimen/change_product_print_width"
                        android:layout_height="wrap_content"
                        android:text="@string/label_credit_no"/>

                    <TextView
                        android:id="@+id/tvCreditNumber"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llChequeAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_product_detail_top">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="@dimen/change_product_print_width"
                        android:layout_height="wrap_content"
                        android:text="@string/label_cheque_name"/>

                    <TextView
                        android:id="@+id/tvChequeName"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_product_detail_top">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="@dimen/change_product_print_width"
                        android:layout_height="wrap_content"
                        android:text="@string/label_cheque_brach"/>

                    <TextView
                        android:id="@+id/tvChequeBrach"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_product_detail_top">

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="@dimen/change_product_print_width"
                        android:layout_height="wrap_content"
                        android:text="@string/label_cheque_no"/>

                    <TextView
                        android:id="@+id/tvChequeNo"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/ItemLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_product_detail_top"
                    >

                    <TextView
                        style="@style/TextView.Label.bold"
                        android:layout_width="@dimen/change_product_print_width"
                        android:layout_height="wrap_content"
                        android:text="@string/label_cheque_date"/>

                    <TextView
                        android:id="@+id/tvChequeDate"
                        style="@style/TextView.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sale_check_photo_height"
                android:orientation="vertical">

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=".................. ผู้รับเงิน"/>

                <TextView
                    android:id="@+id/txtSaleEmpName"
                    style="@style/TextView.Value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="(ภคิน ล้อสุพรรณ)"/>

                <TextView
                    android:id="@+id/txtSaleTeamName"
                    style="@style/TextView.Value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ทีม PAK023"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>