<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtDateCredit"
        style="@style/TextView.Value"
        android:layout_width="@dimen/change_product_detail_width"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:text="09/06/2557" />

    <TextView
        android:id="@+id/txtRef"
        style="@style/TextView.Value"
        android:layout_width="@dimen/employee_list_height"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="0" />

    <TextView
        android:id="@+id/txtTotal"
        style="@style/TextView.Value"
        android:layout_width="@dimen/employee_list_height"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="0" />

    <TextView
        android:id="@+id/txtDateSendMoney"
        style="@style/TextView.Value"
        android:layout_width="@dimen/change_product_detail_width"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="0" />

    
   
</LinearLayout>