<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_view_item_height"
    android:background="@drawable/selector_list_view_background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtPaymentAppointmentDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.3"
        android:gravity="left"
        android:text=""
        android:textColor="#2c2c2c"
        android:textSize="@dimen/normal_font_size" />

    <TextView
        android:id="@+id/txtPaymentAppointmentDateCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.23"
        android:gravity="center"
        android:text=""
        android:textColor="#2c2c2c"
        android:textSize="@dimen/normal_font_size" />

    <TextView
        android:id="@+id/txtSummaryNetAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text=""
        android:textColor="#2c2c2c"
        android:textSize="@dimen/normal_font_size" />
    
    <TextView        
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.27"
        android:gravity="center"
        android:text=""
        android:textColor="#2c2c2c"
        android:textSize="@dimen/normal_font_size" />

</LinearLayout>