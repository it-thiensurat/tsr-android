<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/linearLayoutHeadNumber"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtNumber1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_number_sale_color_gray"
            android:gravity="center"
            android:shadowRadius="10.0"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/layout_underline"
            android:layout_width="15dp"
            android:layout_height="5dip"
            android:layout_gravity="center_vertical"
            android:background="@color/bg_line_status_number" />

        <TextView
            android:id="@+id/txtNumber2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_number_sale_color_gray"
            android:gravity="center"
            android:shadowRadius="10.0"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/layout_underline"
            android:layout_width="15dp"
            android:layout_height="5dip"
            android:layout_gravity="center_vertical"
            android:background="@color/bg_line_status_number" />

        <TextView
            android:id="@+id/txtNumber3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_number_sale_color_gray"
            android:gravity="center"
            android:shadowRadius="10.0"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/layout_underline"
            android:layout_width="15dp"
            android:layout_height="5dip"
            android:layout_gravity="center_vertical"
            android:background="@color/bg_line_status_number" />

        <TextView
            android:id="@+id/txtNumber4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_number_sale_color_gray"
            android:gravity="center"
            android:shadowRadius="10.0"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/layout_underline"
            android:layout_width="15dp"
            android:layout_height="5dip"
            android:layout_gravity="center_vertical"
            android:background="@color/bg_line_status_number" />

        <TextView
            android:id="@+id/txtNumber5"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_number_sale_color_gray"
            android:gravity="center"
            android:shadowRadius="10.0"
            android:text="..."
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    

    <th.co.thiensurat.views.ViewTitle
        android:id="@+id/title"
        style="@style/ViewTitle"
        android:padding="@dimen/padding_normal"
        app:text="@string/caption_payment_detail" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_normal" >

        <LinearLayout
            style="@style/ItemLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTitleContract"
                style="@style/TextView.Label.bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/large_font_size" />

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_normal" >

                <TextView

                    android:id="@+id/txt_date_contno"
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_detail_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_contract_date" />

                <TextView
                    android:id="@+id/textViewDateConteact"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal" />
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    android:id="@+id/txt_contno"
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_detail_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_contract_no" />

                <TextView
                    android:id="@+id/textViewContractNumber"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal" />
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_detail_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_customer_name" />

                <TextView
                    android:id="@+id/textViewName"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal" />
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_detail_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_citizen_no" />

                <TextView
                    android:id="@+id/textViewIDcard"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal" />
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_detail_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_customer_address" />

                <TextView
                    android:id="@+id/textViewAddress"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_weight="@dimen/next_payment_customer_detail_value_weight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddressIDCardPhoneNumber"
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_detail_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_phone_number" />

                <TextView
                    android:id="@+id/txtAddressIDCardPhoneNumber"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_weight="@dimen/next_payment_customer_detail_value_weight" />
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_detail_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_install_address" />

                <TextView
                    android:id="@+id/textViewInstall"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_weight="@dimen/next_payment_customer_detail_value_weight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddressInstallPhoneNumber"
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_detail_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_phone_number" />

                <TextView
                    android:id="@+id/txtAddressInstallPhoneNumber"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_weight="@dimen/next_payment_customer_detail_value_weight" />
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_detail_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_product_name" />

                <TextView
                    android:id="@+id/textViewProduct"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_weight="@dimen/next_payment_customer_detail_value_weight" />
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_detail_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_contract_model" />

                <TextView
                    android:id="@+id/textViewModel"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_weight="@dimen/next_payment_customer_detail_value_weight" />
            </LinearLayout>
            
            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="@dimen/change_product_detail_width"
                    android:layout_height="wrap_content"
                    android:text="@string/label_product_no" />

                <TextView
                    android:id="@+id/textViewProductSerialNumber"
                    style="@style/TextView.Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_normal" />
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/label_product_price" />

                <TextView
                    android:id="@+id/textViewPrice"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_weight="0.3"
                    android:gravity="right" />

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="right"
                    android:text="@string/label_baht" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutDiscount"
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/label_product_discount" />

                <TextView
                    android:id="@+id/textViewDiscount"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_weight="0.3"
                    android:gravity="right" />

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="right"
                    android:text="@string/label_baht" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPriceSum"
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/label_product_price_net" />

                <TextView
                    android:id="@+id/textViewPriceSum"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_weight="0.3"
                    android:gravity="right" />

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="right"
                    android:text="@string/label_baht" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutFirstInstallment"
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    android:id="@+id/txt_dd1"
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="งวดที่ 1 ที่ต้องชำระ" />

                <TextView
                    android:id="@+id/textViewPriceFirstInstallment"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_weight="0.3"
                    android:gravity="right" />

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="right"
                    android:text="@string/label_baht" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutInstallment"
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    android:id="@+id/textViewInstallment"
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="งวดที่ 2 ถึงงวดที่  " />

                <TextView
                    android:id="@+id/textViewPriceInstallment"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_weight="0.3"
                    android:gravity="right" />

                <TextView
                    android:id="@+id/textViewNextPaymentCurrency"
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="right"
                    android:text="@string/label_baht" />
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="พนักงาน" />

                <TextView
                    android:id="@+id/txtSaleEmployeeName"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_weight="0.5"
                    android:gravity="left" />
            </LinearLayout>
             <LinearLayout
                style="@style/ItemLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_product_detail_top" >

                <TextView
                    style="@style/TextView.Label.bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="ทีม" />

                <TextView
                    android:id="@+id/txtSaleTeamName"
                    style="@style/TextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_small"
                    android:layout_weight="0.5"
                    android:gravity="left" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>