    <th.co.thiensurat.views.ViewTitle
        android:id="@id/vwTitle"
        style="@style/ViewTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_gory_c"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|center">

                    <TextView
                        style="@style/TextView.Label2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="ชื่อโครงการ"
                        android:textColor="@color/new_primary_color"
                        android:gravity="center"
                        android:background="@color/transparent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_gory_c"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|center">

                    <EditText
                        android:id="@+id/editTextProjectName"
                        style="@style/TextView.Value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:ems="10" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_gory_c"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|center">

                    <TextView
                        style="@style/TextView.Label2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="ประเภทสินค้า :"
                        android:textColor="@color/new_primary_color"
                        android:gravity="center"
                        android:background="@color/transparent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_gory_c"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="1"
                    android:layout_gravity="center_horizontal|center">

                    <Spinner
                        android:id="@+id/spDemo_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_gory"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/TextView.Label2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="รายการสินค้า :"
                        android:textColor="@color/new_primary_color"
                        android:gravity="center"
                        android:background="@color/transparent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_gory"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp" >

                    <Spinner
                        android:id="@+id/spDemo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_add"
                    style="@style/ButtonMain"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="เพิ่มสินค้า"
                    android:padding="10dp"
                    android:textColor="@color/bg_body_white"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/button_round" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="รายการสินค้าที่เลือก"
                    android:padding="3dp"
                    android:textColor="@color/bg_body_white"
                    android:background="@color/bg_sub_header"
                    android:layout_marginTop="10sp"/>

                <LinearLayout
                    android:id="@+id/linear_gory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center" >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/row1"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </LinearLayout>

    </ScrollView>

</LinearLayout>