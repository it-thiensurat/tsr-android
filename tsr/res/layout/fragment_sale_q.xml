<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/th.co.thiensurat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayoutHeadNumber"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNumber1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_number_sale_color_gray"
            android:gravity="center"
            android:shadowRadius="10.0"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/layout_underline"
            android:layout_width="15dp"
            android:layout_height="5dip"
            android:layout_gravity="center_vertical"
            android:background="@color/bg_line_status_number" />

        <TextView
            android:id="@+id/txtNumber2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_number_sale_color_gray"
            android:gravity="center"
            android:shadowRadius="10.0"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/layout_underline"
            android:layout_width="15dp"
            android:layout_height="5dip"
            android:layout_gravity="center_vertical"
            android:background="@color/bg_line_status_number" />

        <TextView
            android:id="@+id/txtNumber3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_number_sale_color_gray"
            android:gravity="center"
            android:shadowRadius="10.0"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/layout_underline"
            android:layout_width="15dp"
            android:layout_height="5dip"
            android:layout_gravity="center_vertical"
            android:background="@color/bg_line_status_number" />

        <TextView
            android:id="@+id/txtNumber4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_number_sale_color_gray"
            android:gravity="center"
            android:shadowRadius="10.0"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/layout_underline"
            android:layout_width="15dp"
            android:layout_height="5dip"
            android:layout_gravity="center_vertical"
            android:background="@color/bg_line_status_number" />

        <TextView
            android:id="@+id/txtNumber5"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_number_sale_color_gray"
            android:gravity="center"
            android:shadowRadius="10.0"
            android:text="..."
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <th.co.thiensurat.views.ViewTitle
        android:id="@id/vwTitle"
        style="@style/ViewTitle"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_gory_c"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"

                    android:layout_gravity="center_horizontal|center">

                    <TextView
                        style="@style/TextView.Label2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="รายการ :"

                        android:gravity="center"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_gory_c"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="1"
                    android:layout_gravity="center_horizontal|center">




                    <Spinner
                        android:id="@+id/spDemo_c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_gory"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="vertical"

                    android:layout_marginTop="40sp" >

                    <TextView
                        style="@style/TextView.Label2"
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="เลือกสินค้า :"

                        android:gravity="center"/>







                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_gory"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="vertical"

                    android:layout_marginTop="10sp" >

                    <Spinner
                        android:id="@+id/spDemo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"/>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_gory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_marginTop="50sp" >


                    <RelativeLayout
                        android:id="@+id/savee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentBottom="true">



                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  เพิ่มสินค้า  "
                            android:textColor="@color/bg_body_white"
                            android:backgroundTint="#FF4081" />

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_gory"
                    android:layout_width="match_parent"
                    android:layout_height="10sp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:background="@color/bg_body_white"

                    android:layout_marginTop="50sp" >
 <View
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/blue_btn_bg_color"
     >

 </View>


                </LinearLayout>





                <LinearLayout
                    android:id="@+id/linear_gory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_marginTop="50sp" >


                    <RelativeLayout
                        android:id="@+id/savee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentBottom="true">



                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  เพิ่มสินค้า  "

                            android:textColor="@color/bg_body_white"
                           android:background="@color/blue_btn_bg_color"
                       />

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_gory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_marginTop="50sp" >


                    <RelativeLayout
                        android:id="@+id/savee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentBottom="true">


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/row1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </android.support.v7.widget.RecyclerView>

                    </RelativeLayout>

                </LinearLayout>





            </LinearLayout>

    </ScrollView>

</LinearLayout>