<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/th.co.thiensurat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <th.co.thiensurat.views.ViewTitle
        android:id="@id/vwTitle"
        style="@style/ViewTitle" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_gory_c"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="1"
                    android:layout_gravity="center_horizontal|center">

                    <TextView
                        style="@style/TextView.Label2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="รายการ :"
                        android:layout_weight="0.3"
                        android:gravity="center"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8">

                        <Spinner
                            android:id="@+id/spDemo_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_gory"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="50sp" >

                    <TextView
                        style="@style/TextView.Label2"
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="เลือกสินค้า :"
                        android:layout_weight="0.3"
                        android:gravity="center"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8">

                        <Spinner
                            android:id="@+id/spDemo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_gory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="50sp" >


                    <RelativeLayout
                        android:id="@+id/savee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentBottom="true">



                        <Button
                            android:id="@+id/btn_report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  หน้าต่อไป  "
                            android:textColor="@color/bg_body_white"
                            android:backgroundTint="#FF4081" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

    </ScrollView>

</LinearLayout>